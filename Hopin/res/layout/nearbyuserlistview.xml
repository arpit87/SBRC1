<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent">   
     <View android:layout_width="fill_parent" android:layout_height="50dip"
           android:background="@color/very_light_gray"/>         
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:paddingTop="5dip"
        android:background="@drawable/gradient_light_gray"
       >
			
   
    
  <ImageView
        android:id="@+id/selfthumbnail"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_margin="9dip"  
        android:layout_centerVertical="true" 
        android:scaleType="fitXY"        
         />
  
   <ImageView
        android:id="@+id/selfthumbnailframe"
        android:layout_width="102dip"
        android:layout_height="102dip"
        android:background="@drawable/icon_frame"       
        android:layout_margin="3dip"
        android:layout_centerVertical="true" 
         />
  <LinearLayout
      android:id="@+id/selfInfoLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"  
      android:layout_toRightOf="@+id/selfthumbnail"
      android:orientation="vertical"
      android:layout_marginLeft="5dip"
       >

      <TextView
          android:id="@+id/my_name_listview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:ellipsize="start"
          android:maxLines="1"          
          android:textColor="@color/black_75"
          android:textSize="23dip"
          android:text="Arpit Mishra"
          android:textStyle="bold" 
          android:layout_marginLeft="2dip"/>

      <TextView
          android:id="@+id/my_source_listview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:maxLines="1"
          android:text="   Source"
          android:textColor="@color/very_dark_gray"
          android:gravity="start"
          android:textSize="18sp"
          android:drawableLeft="@drawable/source_marker"
           android:textStyle="bold" 
           />
      
       <TextView
          android:id="@+id/my_destination_listview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:maxLines="1" 
          android:gravity="start"
          android:drawableLeft="@drawable/destination_marker"
          android:text="   Destination"         
          android:textColor="@color/very_dark_gray"
          android:textSize="18sp"   
          android:textStyle="bold"       
          />
       
       <TextView
          android:id="@+id/my_time_listview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"          
          android:maxLines="2"
          android:textColor="@color/very_dark_gray"
          android:textSize="18sp" 
          android:text="   Time"
          android:gravity="start"
          android:drawableLeft="@drawable/time_clock" 
           android:textStyle="bold"          
         />
       
  </LinearLayout>
  <View android:layout_width="fill_parent" android:layout_height="1dip"
           android:background="@color/black"
           android:alpha=".75"
           android:layout_below="@id/selfthumbnailframe"
           />  
    </RelativeLayout>
    

    <ListView 
              android:id="@android:id/list"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"             
              android:cacheColorHint="@android:color/transparent"
              android:divider="@android:color/transparent"
              android:dividerHeight="12dip"
              android:background="@color/white"
              >
    </ListView>

    <TextView android:id="@id/android:empty"
              android:layout_width="match_parent"
              android:layout_height="match_parent"              
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:gravity="center"
              android:text="Tap on search button on bar"
              android:textColor="@color/dark_gray"
              android:background="@color/white"
              android:textStyle="bold"/>
</LinearLayout>

