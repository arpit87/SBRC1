<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_activereq_main_layout"
    android:layout_width="260dip"
    android:layout_height="wrap_content"
    android:background="@color/white"    
    android:orientation="vertical" 
    android:paddingBottom="5dip"   
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="5dip" >
    
    <RelativeLayout
        android:id="@+id/settings_activereq_header"
        android:layout_height="wrap_content"
        android:layout_width="250dip"
        android:paddingLeft="5dip"
    	android:paddingRight="3dip"
    	android:background="@drawable/transparent_black">

            <TextView
            android:id="@+id/settings_activereq_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Active request setting"   
            android:textColor="@color/white"
            android:textSize="20dip"
            android:paddingTop="2.0dip"     
            android:paddingBottom="2.0dip"    
            android:layout_marginLeft="2.0dip"            
            android:layout_marginRight="1.0dip"            
             />
            
        <ImageView
            android:id="@+id/settings_activereq_btn_close"
            android:layout_width="30dip"
            android:layout_height="30dip"            
            android:src="@drawable/button_close_white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"                    
            android:scaleType="centerCrop" />
                    
     </RelativeLayout>  
     
    
    
  <TextView
        android:id="@+id/disclaimer"
        android:textColor="@color/black"        
        android:layout_marginTop="10dip"
        android:textSize="12dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:padding="10dip"           
        android:text="On application close," />  
    
     
    <RadioGroup 
    android:id="@+id/settings_activereq_radio_group"   
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="12dip"      
    >
    
    <RadioButton 
        android:id="@+id/settings_activereq_radiobutton_15min" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep last search alive"
        android:textColor="@color/black"
        android:drawableRight="@drawable/radio_button"
        android:padding="15dip"
        
        />
    <RadioButton
        android:id="@+id/settings_activereq_radiobutton_30min"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete last search"
        android:textColor="@color/black"
        android:drawableRight="@drawable/radio_button"
        android:padding="15dip"
        />
    
    <RadioButton
        android:id="@+id/settings_activereq_radiobutton_5min" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promt to keep alive/delete"
        android:textColor="@color/black"        
       	android:drawableRight="@drawable/radio_button"
        android:padding="15dip"
        />
    
</RadioGroup>
      
    
  <TextView
        android:id="@+id/disclaimer"
        android:textColor="@color/black"        
        android:layout_marginTop="10dip"
        android:textSize="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:paddingLeft="7dip"           
        android:text="*active means you will receive notification on new match and others can contact you" />  
    

</LinearLayout>