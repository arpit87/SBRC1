<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="280dip"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white"
              android:gravity="center_horizontal"              
               >

    <TextView
            android:id="@+id/search_suggestions_header_text"
            android:layout_width="280dip"
            android:layout_height="wrap_content"
            android:paddingBottom="2.0dip"
            android:paddingTop="2.0dip"
            android:text="Did you mean?"
            android:textColor="@color/black"
            android:textSize="20dip"
            android:textStyle="bold" 
            android:gravity="center_horizontal"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_rectangle_background_gray"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginBottom="5dip"
            android:orientation="vertical">
            <ListView 
              android:id="@+id/search_suggestions_listview"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white"
              android:cacheColorHint="@android:color/transparent"
              android:divider="@color/dark_gray"
              android:dividerHeight="1dip"/>
    </LinearLayout>
</LinearLayout>