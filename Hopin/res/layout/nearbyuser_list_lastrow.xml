<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/listview_selector" >

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"       
    android:orientation="horizontal"
    android:padding="10dip"
    
     >
   
   <LinearLayout
      android:id="@+id/nearbyuser_list_row_traveldetails"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"      
      android:orientation="vertical"
      android:layout_marginLeft="2dip"  
      android:layout_marginTop="40dip"      
      android:background="@drawable/rounded_rectangle_verylightgray_with_backgroundshadow"
      android:paddingBottom="2dip"
       >
     
        <TextView
          android:id="@+id/nearbyuser_list_row_mutualfriends"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:maxLines="1"
          android:text="0 mutual friends"
          android:textColor="@color/black_75"
          android:gravity="center_vertical"
          android:textSize="15sp"            
          android:layout_marginLeft="88dip"   
          android:layout_marginTop="5dip"        
           />
      
      <TextView
          android:id="@+id/nearbyuser_list_row_source"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:maxLines="1"
          android:text="Shimmering Heights ,Powai Vihar mumbai maharashtra"
          android:textColor="@color/very_dark_gray"
          android:gravity="center_vertical"
          android:textSize="15sp"
          android:drawableLeft="@drawable/source_marker"  
          android:layout_marginLeft="8dip"   
          android:layout_marginTop="5dip"        
           />
      
       <TextView
          android:id="@+id/nearbyuser_list_row_destination"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:maxLines="1" 
          android:gravity="center_vertical"
          android:drawableLeft="@drawable/destination_marker"
          android:text="Shop number 21 ,Andheri Kurla road mumbai maharashtra"         
          android:textColor="@color/very_dark_gray"
          android:textSize="15sp"   
          android:layout_marginLeft="8dip"       
          />
       
       <TextView
          android:id="@+id/nearbyuser_list_row_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"          
          android:maxLines="1"
          android:textColor="@color/very_dark_gray"
          android:textSize="15sp" 
          android:drawableLeft="@drawable/time_clock"
          android:text="3:00 AM, Daily" 
          android:layout_marginLeft="8dip"          
         />
       
  </LinearLayout> 
  
   <ImageView
        android:id="@+id/nearbyuser_list_row_image"
        android:layout_width="62dp"
        android:layout_height="62dp"             
        android:layout_marginLeft="17dip"
        android:layout_marginTop="5dip"  
        android:background="@drawable/userpicicon_white"
         />  
         
   <ImageView
        android:id="@+id/nearbyuser_list_row_imageframe"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/icon_frame"       
        android:layout_marginLeft="15dip"
        android:layout_marginTop="3dip"        
         
         />
    
   <ImageView
            android:id="@+id/nearbyuser_list_row_chatstatus_offline"
            android:layout_width="15.0dip"
            android:layout_height="15dip"                             
            android:scaleType="centerInside"
            android:layout_marginTop="15dip"
             android:layout_marginRight="10dip" 
            android:src="@drawable/chat_dot_gray" 
            android:layout_alignParentRight="true"           
            />  
            
   <TextView
        android:id="@+id/nearbyuser_list_row_nearbyusername"
        android:layout_width="0dip"
        android:layout_height="wrap_content" 
        android:text="Arpit Mishra"
        android:layout_marginLeft="8dip"      
        android:layout_marginTop="4dip"    
        android:textColor="#040404"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:typeface="sans"
        android:textSize="25dip"        
        android:textStyle="bold"        
        android:layout_toRightOf="@id/nearbyuser_list_row_imageframe"
        android:layout_toLeftOf="@id/nearbyuser_list_row_chatstatus_offline"
        />
             
         
    <ImageView
            android:id="@+id/nearbyuser_list_row_chatstatus_online"
            android:layout_width="15dip"
            android:layout_height="15dip"            
            android:scaleType="centerInside"
            android:src="@drawable/chat_dot_green"
            android:layout_marginTop="15dip"  
            android:layout_marginRight="10dip"   
            android:layout_alignParentRight="true"  
            android:visibility="invisible"      
            />
      
               
   
         
 </RelativeLayout> 

  <View
       android:id="@+id/nearbyuser_list_row_separator"
       android:layout_width="match_parent"
       android:layout_height="2dip"
            
       android:layout_marginTop="2dip"
       android:background="@color/gray" >
</View>  
  <TextView
      android:layout_width="match_parent"
      android:layout_height="30dip"
      android:gravity="center"
      android:text="Tap to chat,long click for options"
      android:textColor="@color/dark_gray"
      android:background="@android:color/transparent"
      android:textStyle="bold"
    ></TextView>
 
  
 </LinearLayout>