<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="70dip"       
    android:orientation="horizontal" >

   <ImageView
        android:id="@+id/nearbyuser_list_row_imageframe"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/icon_frame"       
        android:layout_margin="3dip"
        android:layout_centerVertical="true" 
         />
    
  <ImageView
        android:id="@+id/nearbyuser_list_row_image"
        android:layout_width="60dp"
        android:layout_height="60dp"             
        android:layout_margin="5dip"
        android:layout_centerVertical="true" 
         />  
     <RelativeLayout
      android:id="@+id/nearbyuser_list_row_userdetails"
      android:layout_width="match_parent"
      android:layout_height="70dip"
      android:layout_toRightOf="@+id/nearbyuser_list_row_imageframe"
      android:orientation="vertical"
      android:layout_marginLeft="5dip"
      android:visibility="visible"
      android:layout_centerVertical="true"
       >
      
        <ImageView
            android:id="@+id/nearbyuser_list_row_chatstatus_online"
            android:layout_width="15dip"
            android:layout_height="15dp"            
            android:scaleType="centerInside"
            android:src="@drawable/chat_dot_green"
            android:layout_marginTop="10dip" />
      
      <ImageView
            android:id="@+id/nearbyuser_list_row_chatstatus_offline"
            android:layout_width="15.0dip"
            android:layout_height="15dp"                             
            android:scaleType="centerInside"
            android:layout_marginTop="10dip"
            android:src="@drawable/chat_dot_gray" />
      
         <TextView
        android:id="@+id/nearbyuser_list_row_nearbyusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Arpit Mishra"
        android:layout_marginLeft="3dip"        
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="25dip"        
        android:textStyle="bold"
        android:layout_toRightOf="@id/nearbyuser_list_row_chatstatus_offline"
        />
    
         
    <TextView
        android:id="@+id/nearbyuser_list_row_percentmatch"
        android:layout_width="wrap_content"
        android:layout_height="12dip"               
        android:textSize="10dip"
        android:textColor="@color/black_75"
        android:layout_below="@id/nearbyuser_list_row_nearbyusername"  
        android:layout_marginLeft="3dip" 
        android:layout_marginRight="14dip" 
        android:layout_marginTop="8dip" 
        android:background="@drawable/tricolorgradientt"       
        android:text=" 75% match "/>  
 </RelativeLayout>    
    
    <SlidingDrawer android:id="@+id/nearbyuser_list_row_traveldetailsdrawer"
  android:layout_width="330dip"
  android:layout_height="70dip"
  android:orientation="horizontal"
  android:handle="@+id/nearbyuser_list_row_opendetilsdrawerhandle"
  android:content="@+id/nearbyuser_list_row_traveldetails"
  android:padding="10dip"
  android:layout_centerVertical="true"
  android:layout_alignParentRight="true"  
  > 
  
        <ImageView android:id="@+id/nearbyuser_list_row_opendetilsdrawerhandle"          
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:src="@drawable/drawerpull"
          android:layout_centerVertical="true"
          android:scaleType="fitEnd"/> 
           
   
   <RelativeLayout
      android:id="@+id/nearbyuser_list_row_traveldetails"
      android:layout_width="wrap_content"
      android:layout_height="70dip"
      android:layout_toRightOf="@+id/nearbyuser_list_row_imageframe"
      android:orientation="vertical"
      android:layout_marginLeft="5dip"      
      android:layout_centerVertical="true"
      android:background="@color/white"
       >
           
      <TextView
          android:id="@+id/nearbyuser_list_row_source"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:maxLines="1"
          android:text="Powai mumbai"
          android:textColor="#040404"
          android:gravity="center_vertical"
          android:textSize="13sp"
          android:drawableLeft="@drawable/source_marker"
          android:layout_toRightOf="@id/nearbyuser_list_row_opendetilsdrawerhandle" 
           />
      
       <TextView
          android:id="@+id/nearbyuser_list_row_destination"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:maxLines="1" 
          android:gravity="center_vertical"
          android:drawableLeft="@drawable/destination_marker"
          android:text="Andheri mumbai "         
          android:textColor="#040404"
          android:textSize="13sp" 
          android:layout_toRightOf="@id/nearbyuser_list_row_opendetilsdrawerhandle" 
          android:layout_below="@id/nearbyuser_list_row_source"
          />
       
       <TextView
          android:id="@+id/nearbyuser_list_row_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"          
          android:maxLines="2"
          android:textColor="#040404"
          android:textSize="13sp" 
          android:drawableLeft="@drawable/time_clock_enabled"
          android:text="3:00 AM, Daily"
          android:layout_toRightOf="@id/nearbyuser_list_row_opendetilsdrawerhandle"
          android:layout_below="@id/nearbyuser_list_row_destination" 
         />
       
  </RelativeLayout>
  </SlidingDrawer>  
 
 </RelativeLayout>
  <View
       android:id="@+id/nearbyuser_list_row_separator"
       android:layout_width="match_parent"
       android:layout_height="2dip"
            
       android:layout_marginTop="2dip"
       android:background="@color/gray" >
</View>  
  <TextView
      android:layout_width="match_parent"
      android:layout_height="30dip"
      android:gravity="center"
      android:text="Tap to chat,long click for options"
      android:textColor="@color/dark_gray"
      android:background="@color/white"
      android:textStyle="bold"
    ></TextView>
 
  
 </LinearLayout>