<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_activereq_main_layout"
    android:layout_width="260dip"
    android:layout_height="wrap_content"
    android:background="@color/white"    
    android:orientation="vertical" 
    >    

    <TextView
          
           android:layout_width="260dip"
           android:layout_height="wrap_content" 
           android:text="Show any active request?"   
           android:textColor="@color/white"
           android:textSize="20dip"           
           android:background="@drawable/gradient_green" 
           android:gravity="center_horizontal"
           android:paddingTop="4dip"
           android:paddingBottom="4dip"                     
             />
            
  <LinearLayout 
      android:id="@+id/show_active_req_prompt_instalayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">  
   <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dip"
                android:text="One time pool"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_horizontal" />
        
      <TableLayout
    android:id="@+id/show_active_req_prompt_instadetails"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
    android:paddingLeft="30dip"   
    android:layout_weight="1"
    android:visibility="gone"
    android:clickable="true"
    android:background="@drawable/borderless_button">
    <TableRow 
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dip"
            android:text="From: "    
            android:gravity="right"                    
             />
		    <TextView
		        android:id="@+id/show_active_req_prompt_insta_source"
		        android:layout_width="210dip"
		        android:layout_height="wrap_content"		        
		        android:textColor="#343434"
		        android:textSize="15dip"
		        android:layout_marginTop="1dip"      
		        android:maxLines="2"
		        android:ellipsize="marquee"   />
    </TableRow>
    <TableRow >
         <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textStyle="bold"
            android:text="To: "    
            android:gravity="right"                   
             />
          <TextView
        android:id="@+id/show_active_req_prompt_insta_destination"
         android:layout_width="210dip"
        android:layout_height="wrap_content"       
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"    
        android:maxLines="2"
        android:ellipsize="marquee"     />
    </TableRow>
    <TableRow > <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="Time: "       
            android:textStyle="bold"                
             />
    <TextView
        android:id="@+id/show_active_req_prompt_insta_time"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="#343434"
        android:textSize="15dip"
        android:lines="1"
                 />
    </TableRow>
    </TableLayout>
    <TextView 
             android:id="@+id/show_active_req_prompt_insta_noreq"
             android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_gravity="center_horizontal"
        android:text="No active request"
        android:lines="1"
        android:textColor="@color/gray"
        android:textSize="20dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"/> 
</LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginTop="5dip"
                />
 <LinearLayout 
     android:id="@+id/show_active_req_prompt_carpoollayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"> 
      <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dip"
                android:text="Daily CarPool"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_horizontal" />
        <TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/show_active_req_prompt_carpooldetails"
    android:paddingLeft="30dip"   
    android:layout_weight="1"
    android:visibility="gone"
    android:clickable="true"
    android:background="@drawable/borderless_button">
    <TableRow 
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dip"
            android:text="From: "    
            android:gravity="right"                    
             />
		    <TextView
		        android:id="@+id/show_active_req_prompt_carpool_source"
		        android:layout_width="210dip"
		        android:layout_height="wrap_content"		        
		        android:textColor="#343434"
		        android:textSize="15dip"
		        android:layout_marginTop="1dip"      
		        android:maxLines="2"
		        android:ellipsize="marquee"   />
    </TableRow>
    <TableRow >
         <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textStyle="bold"
            android:text="To: "    
            android:gravity="right"                   
             />
          <TextView
        android:id="@+id/show_active_req_prompt_carpool_destination"
         android:layout_width="210dip"
        android:layout_height="wrap_content"       
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"    
        android:maxLines="2"
        android:ellipsize="marquee"     />
    </TableRow>
    <TableRow > <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="Time: "       
            android:textStyle="bold"                
             />
    <TextView
        android:id="@+id/show_active_req_prompt_carpool_time"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="#343434"
        android:textSize="15dip"
        android:lines="1"
                 />
    </TableRow>
    </TableLayout>
    

        
         <TextView 
        android:id="@+id/show_active_req_prompt_carpool_noreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_gravity="center_horizontal"
        android:text="No active request"
        android:lines="1"
        android:textColor="@color/gray"
        android:textSize="20dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"/>   
         
    
 </LinearLayout>
       <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginTop="5dip"
                />
   <RelativeLayout 
       android:layout_height="match_parent"
       android:layout_width="match_parent" 
       android:layout_marginBottom="5dip"      
       >    
  <Button
            android:id="@+id/show_active_req_prompt_newreqbutton"
            android:textSize="15dip" 
            android:textColor="@color/white" 
            android:layout_centerHorizontal="true"
             android:background="@drawable/green_gradient_btn_selector"
             android:layout_marginTop="5dip"                        
             android:layout_width="wrap_content"
             android:layout_height="40dip"
             android:paddingLeft="5dip"
             android:paddingRight="5dip"
             android:text="No,I will put new request"
             
             />   
    <ImageView
            android:id="@+id/show_active_req_prompt_chat"
            android:textSize="15dip"             
            android:layout_alignParentRight="true"            
             android:background="@drawable/chat_icon_green_selector"                                    
             android:layout_width="40dip"
             android:layout_height="35dip"            
             android:paddingRight="10dip"
             android:scaleType="centerInside"
             android:layout_centerVertical="true"            
             />             
  </RelativeLayout>
  <TextView       
        android:textColor="@color/black"
        android:textSize="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:paddingLeft="10dip"           
        android:text="*Tap on any request to search" />
</LinearLayout>