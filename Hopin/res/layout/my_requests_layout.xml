<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              android:gravity="center_horizontal" >

    <TextView
            android:id="@+id/my_requests_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2.0dip"
            android:paddingTop="2.0dip"
            android:text="My Active Requests"
            android:textColor="@color/black"
            android:textSize="20dip"
            android:textStyle="bold" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_rectangle_background_gray"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginBottom="2dip"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dip"
                android:text="One time pool"
                android:textStyle="bold"    
                android:layout_marginTop="5dip"                
                android:layout_gravity="center_horizontal" />
         
         <TextView
             android:id="@+id/my_requests_insta_noactivereq" 
             android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_gravity="center_horizontal"
        android:text="No active request"
        android:textColor="@color/gray"
        android:textSize="20dip"
        android:visibility="visible"/>
         
        <LinearLayout 
            android:id="@+id/my_requests_instareq_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:orientation="vertical" 
    android:visibility="gone"
    >
    
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dip"
    android:layout_weight="1">
    <TableRow 
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_requests_insta_source_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dip"
            android:text="From: "    
            android:gravity="right"                    
             />
		    <TextView
		        android:id="@+id/my_requests_insta_source"
		        android:layout_width="210dip"
		        android:layout_height="wrap_content"		        
		        android:textColor="#343434"
		        android:textSize="15dip"
		        android:layout_marginTop="1dip"      
		        android:maxLines="2"
		        android:ellipsize="marquee"   />
    </TableRow>
    <TableRow >
         <TextView
            android:id="@+id/my_requests_insta_destination_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textStyle="bold"
            android:text="To: "    
            android:gravity="right"                   
             />
          <TextView
        android:id="@+id/my_requests_insta_destination"
         android:layout_width="210dip"
        android:layout_height="wrap_content"       
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"    
        android:maxLines="2"
        android:ellipsize="marquee"     />
    </TableRow>
    <TableRow > <TextView
            android:id="@+id/my_requests_insta_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="Time: "       
            android:textStyle="bold"                
             />
    <TextView
        android:id="@+id/my_requests_insta_details"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="#343434"
        android:textSize="15dip"
        android:lines="1"
                 />
    </TableRow>
    </TableLayout>

        <LinearLayout android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      android:layout_width="fill_parent" >
        <Button
                android:id="@+id/show_users_insta"
                android:layout_width="0dip"   
                android:layout_weight="1"             
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:background="@drawable/green_gradient_btn_selector"
                android:text="Show Users"
                android:textColor="@color/white"
                />

        <Button
            android:id="@+id/my_requests_insta_deletereq"
            android:layout_width="0dip"         
            android:layout_height="30dip"
             android:layout_weight="1"  
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
            android:background="@drawable/red_gradient_btn"
            android:text="Delete"
            android:textColor="@color/white" />
        </LinearLayout>

  </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dip"
                android:text="Daily Carpool"
                android:layout_marginTop="5dip"    
                android:textStyle="bold"           
                android:layout_gravity="center_horizontal" />
        
         <TextView 
             android:id="@+id/my_requests_carpool_noactivereq"
             android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_gravity="center_horizontal"
        android:text="No active request"
        android:textColor="@color/gray"
        android:textSize="20dip"/>
       <LinearLayout 
           android:id="@+id/my_requests_carpoolreq_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:orientation="vertical" 
    android:visibility="gone"    
    >
      
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dip"
    android:layout_weight="1">
    <TableRow 
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_requests_carpool_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dip"
            android:text="From: "    
            android:gravity="right"                    
             />
		    <TextView
		        android:id="@+id/my_requests_carpool_source"
		        android:layout_width="210dip"
		        android:layout_height="wrap_content"		        
		        android:textColor="#343434"
		        android:textSize="15dip"
		        android:layout_marginTop="1dip"      
		        android:maxLines="2"
		        android:ellipsize="marquee"   />
    </TableRow>
    <TableRow >
         <TextView
            android:id="@+id/my_requests_carpool_destination_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textStyle="bold"
            android:text="To: "    
            android:gravity="right"                   
             />
          <TextView
        android:id="@+id/my_requests_carpool_destination"
         android:layout_width="210dip"
        android:layout_height="wrap_content"       
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"    
        android:maxLines="2"
        android:ellipsize="marquee"     />
    </TableRow>
    <TableRow > <TextView
            android:id="@+id/my_requests_carpool_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="Time: "       
            android:textStyle="bold"                
             />
    <TextView
        android:id="@+id/my_requests_carpool_details"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="#343434"
        android:textSize="15dip"
        android:lines="1"
                 />
    </TableRow>
    </TableLayout>
       <LinearLayout android:orientation="horizontal"
                     android:layout_height="wrap_content"
                     android:layout_width="fill_parent">
       <Button
               android:id="@+id/show_users_carpool"
               android:layout_width="0dip"
               android:layout_weight="1"
               android:layout_height="30dip"
               android:layout_gravity="center_horizontal"
               android:gravity="center_horizontal|center_vertical"
               android:paddingLeft="5dip"
               android:paddingRight="5dip"
               android:layout_marginLeft="10dip"
               android:layout_marginRight="10dip"
               android:background="@drawable/green_gradient_btn_selector"
               android:text="Show Users"
               android:textColor="@color/white"
               />
        <Button
            android:id="@+id/my_requests_carpool_deletereq"
           	android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="30dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/red_gradient_btn"
            android:text="Delete"
            android:textColor="@color/white" />
       </LinearLayout>

 
  </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"/>
       
      <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="@color/black"
          
            android:text="*To prevent spurious requests, hopin logs on server only one daily carpool and one insta request at a time (most recent ones)" />
    </LinearLayout>
    

</LinearLayout>