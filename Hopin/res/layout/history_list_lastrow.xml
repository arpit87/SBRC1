<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borderless_button"  
    >
<TableLayout
      android:id="@+id/history_table"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dip"
    >
    <TableRow 
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/history_source_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dip"
            android:text="From: "    
            android:gravity="right"                    
             />
		    <TextView
		        android:id="@+id/history_source"
		        android:layout_width="210dip"
		        android:layout_height="wrap_content"		        
		        android:textColor="#343434"
		        android:textSize="15dip"
		        android:layout_marginTop="1dip"      
		        android:maxLines="2"
		        android:ellipsize="marquee"   />
    </TableRow>
    <TableRow >
         <TextView
            android:id="@+id/history_destination_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textStyle="bold"
            android:text="To: "    
            android:gravity="right"                   
             />
          <TextView
        android:id="@+id/history_destination"
         android:layout_width="210dip"
        android:layout_height="wrap_content"       
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"    
        android:maxLines="2"
        android:ellipsize="marquee"     />
    </TableRow>
    <TableRow > <TextView
            android:id="@+id/history_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="Time: "       
            android:textStyle="bold"                
             />
    <TextView
        android:id="@+id/history_details"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="#343434"
        android:textSize="15dip"
        android:lines="1"
                 />
    </TableRow>
    </TableLayout>
  
 
      <TextView
        android:id="@+id/history_req_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="@color/gray"
        android:text="14 feb"
        android:textSize="12dip"
        android:gravity="bottom"
      	android:layout_alignBottom="@id/history_table"
        android:layout_alignParentRight="true" 
        android:layout_weight="0"    
          />

  </RelativeLayout>
 <View
       
       android:layout_width="match_parent"
       android:layout_height="1dip"            
       android:layout_marginTop="2dip"
       android:background="@color/gray" >
</View>  
  <TextView
      android:layout_width="match_parent"
      android:layout_height="30dip"
      android:gravity="center"      
      android:textColor="@color/dark_gray"
      android:text="Tap row to search"
      android:background="@color/white"
      android:textStyle="bold"></TextView>
    
</LinearLayout>

