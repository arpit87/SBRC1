<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    	
      <TextView
      android:id="@+id/other_user_profile_popup_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" 
      android:textSize="20dip"          
      android:background="@drawable/transparent_black"             
      android:padding="4dip"
      android:textColor="@color/white" 
              
       />
          
    <RelativeLayout
        android:id="@+id/other_user_profile_popup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_horizontal"
        >  

        <ImageView
            android:id="@+id/other_user_profile_popup_expanded_pic"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_margin="10.0dip"
            android:scaleType="centerCrop" 
            android:src="@drawable/userpicicon"/>

        <ImageView
            android:id="@+id/other_user_profile_popup_expanded_pic_frame"
            android:layout_width="72.0dip"
            android:layout_height="72.0dip"
            android:layout_margin="9.0dip"
            android:src="@drawable/icon_frame" />
         
           
      </RelativeLayout>   

	<TableLayout
    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dip"
    android:layout_weight="1"
    android:layout_marginLeft="10dip"
   >        
    <TableRow 
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dip"
            android:text="Gender: "    
            android:gravity="right"                    
             />
		    <TextView
		        android:id="@+id/other_user_profile_gender"
		        android:layout_width="210dip"
		        android:layout_height="wrap_content"		        
		        android:textColor="#343434"
		        android:textSize="15dip"
		        android:layout_marginTop="1dip"      
		        android:maxLines="1"
		        android:ellipsize="marquee"   />
    </TableRow>
    <TableRow >
         <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textStyle="bold"
            android:text="Works at: "    
            android:gravity="right"                   
             />
          <TextView
        android:id="@+id/other_user_profile_worksat"
         android:layout_width="210dip"
        android:layout_height="wrap_content"       
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"    
        android:maxLines="2"
        android:ellipsize="marquee"     />
    </TableRow>
    <TableRow > <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="Studied at: "       
            android:textStyle="bold"                
             />
    <TextView
        android:id="@+id/other_user_profile_studiedat"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="#343434"
        android:textSize="15dip"
        android:lines="1"
                 />
    </TableRow>
    
    <TableRow > <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="HomeTown: "       
            android:textStyle="bold"                
             />
    <TextView
        android:id="@+id/other_user_profile_hometown"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="#343434"
        android:textSize="15dip"
        android:lines="1"
                 />
    </TableRow>
    </TableLayout>
    
   

</LinearLayout>