<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector"
    android:orientation="horizontal" >

   <ImageView
        android:id="@+id/nearbyuser_list_row_imageframe"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/icon_frame"       
        android:layout_margin="3dip"
        android:layout_centerVertical="true" 
         />
    
  <ImageView
        android:id="@+id/nearbyuser_list_row_image"
        android:layout_width="56dp"
        android:layout_height="56dp"             
        android:layout_margin="5dip"
        android:layout_centerVertical="true" 
         /> 
  
   
    <TextView
        android:id="@+id/nearbyuser_list_row_nearbyusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_toRightOf="@id/nearbyuser_list_row_imageframe"    
        android:text="Arpit Mishra"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>
    
      <ImageView
            android:id="@+id/nearbyuser_list_row_chatstatus_offline"
            android:layout_width="12.0dip"
            android:layout_height="12dp"     
            android:layout_toRightOf="@id/nearbyuser_list_row_nearbyusername"   
            android:layout_marginTop="3dip"    
            android:layout_marginLeft="3dip"                 
            android:scaleType="centerInside"
            android:src="@drawable/chat_dot_gray" />
      
      <ImageView
            android:id="@+id/nearbyuser_list_row_chatstatus_online"
            android:layout_width="12.0dip"
            android:layout_height="12dp"    
            android:layout_marginLeft="3dip" 
            android:layout_toRightOf="@id/nearbyuser_list_row_nearbyusername"  
            android:layout_marginTop="3dip"                    
            android:scaleType="centerInside"
            android:src="@drawable/chat_dot_green" />    
   
    <TextView
        android:id="@+id/nearbyuser_list_row_nearbyuserFromText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nearbyuser_list_row_nearbyusername"
        android:layout_toRightOf="@id/nearbyuser_list_row_imageframe" 
        android:textSize="12dip"       
        android:layout_marginTop="1dip"  
        android:text="From: "/>    
        
    <TextView
        android:id="@+id/nearbyuser_list_row_nearbyuserToText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nearbyuser_list_row_nearbyuserFromText"
        android:layout_toRightOf="@id/nearbyuser_list_row_imageframe" 
        android:textSize="12dip"        
        android:layout_marginTop="1dip"  
        android:text="  To:"/>   
        
    <TextView
        android:id="@+id/nearbyuser_list_row_nearbyuserTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nearbyuser_list_row_nearbyuserToText"
        android:layout_toRightOf="@id/nearbyuser_list_row_imageframe"
        android:textSize="12dip"        
        android:layout_marginTop="1dip"  
        android:text="Time: "/>  
 
 
 </RelativeLayout>